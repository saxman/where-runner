<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WorkoutMainFragment">

    <!-- TODO move constants to res -->

    <FrameLayout
        android:id="@+id/workout_content_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/clock_margin">

        <ImageView
            android:id="@+id/gps_status"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_gps_not_fixed"
            android:tint="@color/text_primary" />

        <TextClock
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/clock_padding_horizontal"
            android:paddingRight="@dimen/clock_padding_horizontal"
            android:paddingTop="@dimen/clock_padding_vertical"
            android:paddingBottom="@dimen/clock_padding_vertical"
            android:format12Hour="h:mm:ss"
            android:format24Hour="H:mm:ss"
            style="@style/text_clock" />

        <ImageView
            android:id="@+id/phone_status"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_phone_disconnected"
            android:tint="@color/text_primary" />

    </LinearLayout>

</FrameLayout>
