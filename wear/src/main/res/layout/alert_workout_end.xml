<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:layout_centerVertical="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="@string/end_workout"
            style="@style/text_normal"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/confirm_button"
                    android:background="@drawable/accept_deny_dialog_positive_bg"
                    android:src="@drawable/ic_done"
                    style="@style/action_button" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/confirm_button"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:text="@string/end_workout_confirm"
                    style="@style/text_small" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/cancel_button"
                    android:background="@drawable/accept_deny_dialog_negative_bg"
                    android:src="@drawable/ic_clear"
                    style="@style/action_button" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/cancel_button"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:text="@string/end_workout_cancel"
                    style="@style/text_small" />

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
